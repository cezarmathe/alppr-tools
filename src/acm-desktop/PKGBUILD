license=('MIT')
depends=(
	alacritty # terminal emulator
	firefox
	gv # pdf viewer
	libappindicator-gtk2 # for system tray
	libappindicator-gtk3 # for system tray
	lxappearance # change gtk theme
	nextcloud-client
	materia-gtk-theme # gtk theme
	papirus-icon-theme # gtk theme
	ristretto # image viewer
	syncthing
	syncthing-gtk
	syncthingtray
	tumbler # thumbnails
	thunar # file manager
	thunderbird # mail
	transmission-gtk # torrents
	vlc
)
